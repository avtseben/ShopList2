<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/iv_parent_background"
        android:src="@drawable/label"
        android:elevation="20dp"
        />
    <Button
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:id="@+id/send_button2"
        android:visibility="invisible"
        android:drawableRight="@drawable/ic_send_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="end|top"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contact_list"
        android:layout_below="@+id/iv_parent_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_list_name2"
        android:layout_alignBottom="@+id/send_button2"
        android:layout_toRightOf="@+id/iv_parent_background"
        android:layout_toEndOf="@+id/iv_parent_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_list_date2"
        android:layout_below="@+id/tv_list_name2"
        android:layout_alignRight="@+id/tv_list_name2"
        android:layout_alignEnd="@+id/tv_list_name2" />
</RelativeLayout>
